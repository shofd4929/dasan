<configuration>

    <!-- 로그 파일 경로 설정 -->
    <property name="LOG_HOME" value="/path/to/logs" />

    <!-- 콘솔 로그 출력 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 파일 로그 롤링 설정 -->
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 로그 파일 경로 및 이름 설정 -->
        <file>${LOG_HOME}/spring-batch.log</file>

        <!-- 로그 롤링 정책 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 파일 이름에 날짜를 추가 (매일 롤오버) -->
            <fileNamePattern>${LOG_HOME}/spring-batch-%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- 보존할 로그 파일의 최대 수 설정 (예: 30일) -->
            <maxHistory>30</maxHistory>
            <!-- 로그 파일의 크기 제한을 두고 롤오버를 트리거할 수 있음 (예: 10MB) -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>

        <!-- 로그 메시지 포맷 설정 -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 루트 로거 설정 -->


    <logger name="org.apache.ibatis" level="DEBUG"/>
    <logger name="org.mybatis" level="DEBUG"/>
    <logger name="org.mybatis.spring" level="DEBUG"/>

    <!-- Spring Batch 관련 로그 설정 -->
    <logger name="org.springframework.batch" level="DEBUG">

    </logger>

    <root level="DEBUG">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="ROLLING" />
    </root>

</configuration>
